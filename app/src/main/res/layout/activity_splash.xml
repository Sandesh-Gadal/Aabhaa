<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- Circular Green Background -->

    <!-- Loading Dots -->

    <FrameLayout
        android:id="@+id/leaf_container"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/circle_green"
        android:elevation="8dp"
        android:foregroundGravity="center">

        <!-- Leaf Image with Bounce Animation -->
        <ImageView
            android:id="@+id/leafImage"
            android:layout_width="83dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/leaf_white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leaf_container"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="151dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/dot1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/dot_green" />

        <View
            android:id="@+id/dot2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/dot_green" />

        <View
            android:id="@+id/dot3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/dot_green" />
    </LinearLayout>
</RelativeLayout>
