<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvSliderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slider_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/aabhaGreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSliderMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slider_more"
        android:textColor="@color/aabhaGreen"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/tvSliderTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSectionArticles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        tools:listitem="@layout/item_explore_post"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
