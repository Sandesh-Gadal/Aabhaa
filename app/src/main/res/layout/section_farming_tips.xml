<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvTipsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tips_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/aabhaGreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTipsMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tips_read_more"
        android:textSize="16sp"
        android:textColor="@color/aabhaGreen"
        app:layout_constraintTop_toTopOf="@id/tvTipsTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFarmingTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTipsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_pf_post"/>

</androidx.constraintlayout.widget.ConstraintLayout>
