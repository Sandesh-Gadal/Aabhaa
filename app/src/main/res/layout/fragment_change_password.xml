<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

<!--    &lt;!&ndash; Back Button &ndash;&gt;-->
<!--    <include layout="@layout/back_button" />-->

<!--    &lt;!&ndash; Language Toggle Include &ndash;&gt;-->
<!--    <include-->
<!--        layout="@layout/lang_toggle"-->
<!--        tools:theme="@style/Theme.Aabhaa.Register" />-->

    <!-- Top Illustration -->
    <ImageView
        android:id="@+id/ivChangePassIllustration"
        android:layout_width="262dp"
        android:layout_height="243dp"

        android:contentDescription="Change Password Illustration"
        android:src="@drawable/change_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvChangePassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:textColor="#1B5E20"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivChangePassIllustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvChangePassSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your new password"
        android:textColor="#81C784"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvChangePassTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- New Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newPasswordLayout"
        style="@style/LoginInputStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="New Password"
        app:boxBackgroundMode="none"
        app:startIconDrawable="@drawable/ic_password"
        app:startIconTint="#1B5E20"
        app:endIconMode="password_toggle"
        app:endIconTint="#1B5E20"
        app:layout_constraintTop_toBottomOf="@id/tvChangePassSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_input"
            android:paddingStart="60dp"
            android:inputType="textPassword"
            android:textColor="#1B5E20" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Confirm New Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirmNewPasswordLayout"
        style="@style/LoginInputStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Confirm New Password"
        app:boxBackgroundMode="none"
        app:startIconDrawable="@drawable/ic_password"
        app:startIconTint="#1B5E20"
        app:endIconMode="password_toggle"
        app:endIconTint="#1B5E20"
        app:layout_constraintTop_toBottomOf="@id/newPasswordLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_input"
            android:paddingStart="60dp"
            android:inputType="textPassword"
            android:textColor="#1B5E20" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitChangePassword"
        android:layout_width="333dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#2E7D32"
        android:text="Change Password"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmNewPasswordLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
