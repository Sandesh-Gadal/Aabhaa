<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <!-- Static Label -->
    <TextView
        android:text="Steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp"

        android:layout_marginBottom="8dp"/>


    <!-- Step 1: Land Preparation (with IDs) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvStepNumber"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/dark_green"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStepTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Land Preparation"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginVertical="3dp"/>

            <TextView
                android:id="@+id/tvStepDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plow 2–3 times to loosen soil, remove weeds, and apply organic compost to enhance fertility."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Step 2: Seeding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="2dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/dark_green"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seeding"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginVertical="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use certified wheat seeds; drill them 4–5 cm deep with spacing of 20–22 cm between rows."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Step 3: Irrigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="2dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/dark_green"
            android:gravity="center"
            android:text="3"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Irrigation"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginVertical="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provide first irrigation 20–25 days after sowing. Total 4–5 irrigations at critical stages like tillering and heading."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Step 4: Fertilization -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="2dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/dark_green"
            android:gravity="center"
            android:text="4"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fertilization"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginVertical="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply 100 kg urea, 60 kg DAP, and 40 kg potash per hectare—half urea at sowing, rest after first irrigation."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Step 5: Harvesting -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="2dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/dark_green"
            android:gravity="center"
            android:text="5"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harvesting"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginVertical="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harvest when grains are hard and moisture is around 20%. Dry properly before storage."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>