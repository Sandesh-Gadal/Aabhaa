    <style name="LoginInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="boxBackgroundColor">#E8F5E9</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>



    <style name="OtpDigitBox">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/bg_otp_box</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#1B5E20</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">#1B5E20</item>
        <item name="startIconTint">#1B5E20</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="AabhaaButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">#4CAF50</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="AabhaBottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/bg_white_rounded</item>
        <item name="android:elevation">10dp</item>
        <item name="android:padding">6dp</item>
        <item name="itemIconTint">@drawable/nav_item_color</item>
        <item name="itemTextColor">@drawable/nav_item_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>


    <style name="CategoryChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">50dp</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/aabhaGreen</item>
        <item name="chipBackgroundColor">@color/chip_bg_selector</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="MenuCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="KeyStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="ValueStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">10</item>
        <item name="android:ellipsize">none</item>
    </style>






</resources>